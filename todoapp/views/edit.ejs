<% include ../views/partials/header %>
<div class="container">
  <form class="" action="/todo/edit/<%= todo._id %>" method="post">
    <div class="form-group">
      <label for="">Todo Name</label>
      <input class="form-control" type="text" name="text" value="<%= todo.text %>" placeholder="Add Todo">
    </div>
    <div class="form-group">
      <label for="">Todo Body</label>
      <textarea class="form-control" name="body" placeholder="Add Body"><%= todo.body %></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Submit</button>
    <a type="button" class="btn btn-default" href="/">Cancel</a>
  </form>
</div>
<% include ../views/partials/footer %>
