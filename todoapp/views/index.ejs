<% include ../views/partials/header %>
  <form class="" action="/todo/add" method="post">
    <div class="">
      <label for="">Todo Name</label>
      <input type="text" name="text" placeholder="Add Todo">
    </div>
    <div class="">
      <label for="">Todo Body</label>
      <textarea name="body" rows="8" cols="80" placeholder="Add Body"></textarea>
    </div>
    <button type="submit" name="button">Submit</button>
  </form>
  <!-- todo-list -->
  <ul class='todo-list'>
    <% todos.forEach(function(todo) { %>
      <li class='todo-list-item'>
        <div class="todo-item-header">
          <div class="todo-header-content"><%= todo.text %>
          </div>
          <div class="todo-action-wrapper">
            <a data-id="<%= todo._id %>" href="#" class="delete-todo action-icons-link">
              <i class="material-icons action-icons">delete</i>
            </a>
            <a class="action-icons-link" href="/todo"><i class="material-icons action-icons">edit</i></a>
          </div>
        </div>
        <div class="todo-item-content">
          <%= todo.body %>
        </div>
      </li>
    <% }) %>
  </ul>
  <!-- end of todo-list -->
<% include ../views/partials/footer %>
